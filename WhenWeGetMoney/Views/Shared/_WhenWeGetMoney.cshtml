<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    

</head>
<body>
    @Html.Partial("_nav")
    <div class="container body-content">
        <div class="row">
        </div>
        <div class="row">
            <div class="col-lg-3 visible-lg">
                <div class="suggestions mainStyle">
                    <h3>Suggestions</h3>
                </div>
            </div>
            <div class="col-lg-6 mainlist mainStyle">
                @RenderBody()
            </div>
            <div class="col-lg-3 visible-lg ">
                <div class="moneyPot mainStyle">
                    <h3>$ Pot</h3>
                </div>
                <div class="boughtIt mainStyle">
                        <h3> Bought It List</h3>
                </div>
             </div>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
