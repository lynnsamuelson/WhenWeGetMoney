@model IEnumerable<WhenWeGetMoney.Models.Family>


@{
    Layout = "~/Views/Shared/_WhenWeGetMoney.cshtml";
}


<div ng-controller="Controller">
    <h1>Family Profile</h1>
    <div>
        <h3 id="familyName">@ViewBag.Name</h3>


    </div>

    <div class="familyProfile">
        <div>

            <div method="post">

                <div >
                    <input ng-model="FamilyName" id="addFamilyName" placeholder="Family Name" />
                </div>
                <div>
                    <input ng-model="DollarAmount" id="addDollarAmount" placeholder="Savings Amount" />
                </div>

                <p>
                    {{content}} {{DollarAmount}}
                </p>
                <button ng-click="createOrUpdateFamily()">Save Family</button>
            </div>
        </div>
    </div>
