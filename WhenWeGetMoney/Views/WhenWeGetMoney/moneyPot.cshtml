@model IEnumerable<WhenWeGetMoney.Models.MoneyPot>


@{
    Layout = "~/Views/Shared/_WhenWeGetMoney.cshtml";
}

<div ng-controller="Controller">


    <h1>Available $</h1>

    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="MoneyPot">
                <table>

                    @foreach (var Pot in Model)
                    {
                        <tr>
                            <td class="text-center">@Pot.DollarAmount</td>

                    </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
