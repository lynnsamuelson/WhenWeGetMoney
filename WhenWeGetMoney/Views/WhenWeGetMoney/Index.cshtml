
@model IEnumerable<WhenWeGetMoney.Models.Wish>


    @{
        Layout = "~/Views/Shared/_WhenWeGetMoney.cshtml";
    }


    <div ng-controller="Controller">

    <div>
        <h3>Wish List</h3>
    </div>

    <div class="row">
        <div class="col-lg-6 col-lg-offset-3">
            <div class="wish">
                <div>

                    <div method="post">

                        <div id="addWish">
                            <input ng-model="content" placeholder="Add Wish" />
                        </div>
                        <div id="wishUrl">
                            <input ng-model="cost" placeholder="Cost" />
                        </div>
                        
                        <p>
                            {{content}} {{cost}} 
                        </p>
                         <button ng-click="createWish()">Save Wish</button>
                     

                    </div>
                </div>

              
                
                <table>
                    <tr>
                        <th class="text-center">Date Added</th>
                        <th class="text-center">Wish</th>
                        <th class="text-center">Cost</th>
                        <th class="text-center">Delete</th>

                    </tr>

                        @foreach (var Wish in Model)
                                {
                                    <tr>
                                        <td class="text-center wishToDelete">@Wish.Date.ToString("MMM dd yy")</td>
                                        <td class="text-center wishToDelete">@Wish.Content</td>
                                        <td class="text-center wishToDelete">@Wish.Cost</td>
                                        <td><button ng-click="deleteWish(@Wish.WishId)">Delete</button></td>
                                        <td><button ng-click="boughtWish(@Wish.WishId)">Bought It</button></td>

                                    </tr>
                                }
                  </table>
                </div>
            </div>
        </div>
    </div>

